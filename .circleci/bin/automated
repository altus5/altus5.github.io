#!/bin/bash

# Automated deploy script with Circle CI.

# Exit if any subcommand fails.
set -e

# Variables
ORIGIN_URL=`git config --get remote.origin.url`

if [ $CIRCLE_PROJECT_REPONAME = "altus5.github.io.git" ]; then
  git config user.name "$USER_NAME"
  git config user.email "$USER_EMAIL"
else
  git config user.name "$STAGING_USER_NAME"
  git config user.email "$STAGING_USER_EMAIL"
fi

echo "Started deploying"

# Setup npm.
npm install

# Build site.
gulp

# Checkout master branch.
mkdir -p .target
cd .target
cp -ar ../.git .
git reset --hard
git checkout master
ls
find . -maxdepth 1 ! -name '.' ! -name '.git' -exec rm -rf {} \;
cp -prf ../dist/* .
if [ "$CIRCLE_PROJECT_REPONAME" = "char-siu-men.github.io" ]; then
  echo "remove CNAME"
  env
  rm -f CNAME
else
  echo "deploy production"
  ls
  git status
fi

# Push to master.
git add -fA
git commit --allow-empty -m "$(git log -1 --pretty=%B) [ci skip]"
git push -f $ORIGIN_URL master

echo "Deployed Successfully!"

exit 0
