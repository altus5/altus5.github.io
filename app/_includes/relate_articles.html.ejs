<%
if (posts.length > 0) {
  %>
  <div class="relate">
    <h1>関連記事</h1>
    <ul>
      <%
      posts.forEach(function(post, index, array) {
        %>
        <li class="post-link">
          <span class="post-date">
            <%= formatDate(post.date, 'YYYY/MM/DD') %>
          </span>
          <a class="post-title" href="<%= post.url %>">
            <%= post.title %>
          </a>
          <span class="post-description">
            <a href="<%= post.url %>">
              <%= post.description %>
            </a>
          </span>
        </li>
        <%
      });
      %>
    </ul>
  </div>
  <%
}
%>
